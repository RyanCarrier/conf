function touche() {
  if [ -z "$1" ];then 
	  echo "gib filename"
			else
  touch "$1"	
  chmod a+x "$1"
  echo "#!/bin/bash" >> "$1"
  fi
}

function vime() {
	touche "$1"
	vim "$1"
}

function gobench() {
  if [ "$1" ];then
    go test -bench=. -benchtime="$1s"
  else
    go test -bench=.
  fi
}

[[ -s /etc/profile.d/autojump.zsh ]] && source /etc/profile.d/autojump.zsh

