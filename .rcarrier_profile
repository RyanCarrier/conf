
# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

export GOROOT=/usr/local/go
export GOPATH=$HOME/Projects
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin
export PATH=$PATH:$HOME/Programs/idea14/bin
export PATH=$PATH:$HOME/Programs/btsync/bin
export PATH=$PATH:$HOME/Programs/android-studio/bin
export EDITOR=vim

alias omg='sudo "$BASH" -c "$(history -p !!)"'
alias qq="exit"
alias jake="192.168.100.164"
alias server="192.168.0.10"
alias carryingpigeons="ssh carryingpigeons.com"
alias myip="curl http://ipecho.net/plain; echo"
alias grun="go run main.go"

function gtimea() {
	cd ~/apollo
	python gtime/timelog.py
}

function touche() {
  touch $1
  chmod a+x $1
}

function gobench() {
  if [ "$1" ];then
    go test -bench=. -benchtime="$1s"
  else
    go test -bench=.
  fi
}

function gitstat() {
	find . -maxdepth 1 -mindepth 1 -type d -exec sh -c '(echo {} && cd {} && git status -s && echo)' \;
}
