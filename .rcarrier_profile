
# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

if [ -f "/etc/arch-release" ]; then
	export GOROOT=/usr/lib/go
else
	export GOROOT=/usr/local/go
fi
export GOPATH=$HOME/Projects
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin
export PATH=$PATH:/opt/flutter/bin
export PATH=$PATH:/usr/local/android-studio/bin
export PATH=$PATH:"$HOME/.cargo/bin"
export PATH=$PATH:"/snap/bin"
export PATH=$PATH:"/Users/rcarrier/Android/sdk/platform-tools"
export PATH=$PATH:"$HOME/.local/bin"
export PATH=$PATH:"$HOME/University/matlab-R2019B/bin"
export EDITOR=vim
export ANDROID_SDK_ROOT="$HOME/Android/Sdk"
export ANDROID_HOME="$ANDROID_SDK_ROOT"

if [ -x "$(command -v rustc >/dev/null 2>&1)" ];then
	export RUST_SRC_PATH="$(rustc --print sysroot)/lib/rustlib/src/rust/src"
fi

alias gitlab="$HOME/Projects/src/gitlab.com/rcarrier/"
alias github="$HOME/Projects/src/github.com/RyanCarrier/"
fpath+=~/.zfunc


#export SHELL=/bin/zsh

if [ -z "$ZSH_NAME" ];then
	alias omg='sudo "$BASH" -c "$(history -p !!)"'
	SHELL="$(which bash)"
	noglob
else
	alias omg='sudo $(fc -ln -1)'
	SHELL="$(which zsh)"
fi

alias qq="exit"
alias server="192.168.0.10"
alias carryingpigeons="ssh carryingpigeons.com"
alias myip="curl http://ipecho.net/plain; echo"
alias cd..="cd .."
alias rsync-copy="rsync -avz --progress -h"
alias rsync-move="rsync -avz --progress -h --remove-source-files"
alias rsync-update="rsync -avzu --progress -h"
alias rsync-synchronize="rsync -avzu --delete --progress -h"
alias rm="rm"	#overwrite oh my zsh rm -i
alias xo="xdg-open"


function gtimea() {
	cd ~/Business/apollo
	python gtime/timelog.py
}

function touche() {
	if [ -z "$1" ];then echo "gib filename"
			else
  touch "$1"
  chmod a+x "$1"
  fi
}

function vime() {
	touche "$1"
	echo "#!/bin/bash" >> "$1"
	vim "$1"
}

function gobench() {
  if [ "$1" ];then
    go test -bench=. -benchtime="$1s"
  else
    go test -bench=.
  fi
}

function gacp() {
		git add . &&  git commit -am "$1" && git push
}
