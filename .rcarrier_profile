function touche() {
  touch $1
  chmod a+x $1
}

function gobench() {
  if [ "$1" ];then
    go test -bench=. -benchtime="$1s"
  else
    go test -bench=.
  fi
}

function gacp() {
		git add . &&  git commit -am "$1" && git push
}
