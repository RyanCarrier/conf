
# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

export GOROOT=/usr/local/go
export GOPATH=$HOME/Projects
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin
export PATH=$PATH:/usr/local/groovy/bin
export PATH=$PATH:$HOME/Programs/idea14/bin
export PATH=$PATH:$HOME/Programs/btsync/bin
export PATH=$PATH:$HOME/Programs/android-studio/bin
export PATH=$PATH:"/Applications/IntelliJ IDEA CE.app/Contents/MacOS"
export EDITOR=vim

export SHELL=/bin/zsh

alias omg='sudo "$BASH" -c "$(history -p !!)"'
alias qq="exit"
alias jake="192.168.100.164"
alias server="192.168.0.10"
alias carryingpigeons="ssh carryingpigeons.com"
alias myip="curl http://ipecho.net/plain; echo"
alias grun="go run main.go"
alias cd..="cd .."
alias rsync-copy="rsync -avz --progress -h"
alias rsync-move="rsync -avz --progress -h --remove-source-files"
alias rsync-update="rsync -avzu --progress -h"
alias rsync-synchronize="rsync -avzu --delete --progress -h"
alias rm="rm"

function gtimea() {
	cd ~/apollo
	python gtime/timelog.py
}

function touche() {
  touch $1
  chmod a+x $1
}

function gobench() {
  if [ "$1" ];then
    go test -bench=. -benchtime="$1s"
  else
    go test -bench=.
  fi
}

function gacp() {
		git add . &&  git commit -am "$1" && git push
}
